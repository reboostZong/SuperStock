<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <TextView
        android:id="@+id/searchstock_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF9112"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:text="æ²ªA"
        android:background="@drawable/textview_border"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/searchstock_item_icon"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/searchstock_item_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/searchstock_item_stock_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/searchstock_item_add_button"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:src="@drawable/ic_add"
        android:scaleType="fitXY"/>


</RelativeLayout>